<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SelfTabView">
        <!--指示器高度-->
        <attr name="suTabIndicatorHeight" format="dimension"/>
        <!--指示宽度-->
        <attr name="suTabIndicatorWidth" format="dimension">
            <enum name="auto" value="-1"/>
        </attr>
        <!--指示器背景-->
        <attr name="suTabIndicatorBg" format="reference"/>
        <!--选中tab的背景-->
        <attr name="suTabSelectedBg" format="reference"/>
        <!--未选中tab的背景-->
        <attr name="suTabUnselectedBg" format="reference"/>
        <!--选中tab字体颜色-->
        <attr name="suTabSelectedTextColor" format="color"/>
        <!--tab字体颜色-->
        <attr name="suTabTextColor" format="color"/>
        <!--tab字体大小-->
        <attr name="suTabTextSize" format="dimension"/>
        <!--选中字体缩放比例-->
        <attr name="suTabSelectedTextSize" format="float"/>
        <!--指示器距离底部的距离,默认距离底部距离为零-->
        <attr name="suTabIndicatorMarginBottom" format="dimension"/>
        <!--自定义layout布局-->
        <attr name="suTabSelfLayout" format="reference"/>
        <!--是否允许选中项加粗-->
        <attr name="suTabEnableSelectedTextBold" format="boolean"/>
        <!--点击tab时，page是带有动画的滚动形式还是越过动画，直接到达目标page-->
        <attr name="suTabEnablePageSmoothScroll" format="boolean"/>
        <!--自定义宽度，没有设置该数值，则使用view本身逻辑的宽度设置。只适用于滚动模式下-->
        <attr name="subTabWidth" format="dimension"/>
        <!--滚动模式-->
        <attr name="suTabShowModel" format="enum">
            <!--平均模式-->
            <enum name="average" value="0"/>
            <!--滚动模式-->
            <enum name="scroll" value="1"/>
            <!--自动模式，不够长度直接转为滚动模式-->
            <enum name="auto" value="2"/>
        </attr>
    </declare-styleable>
</resources>